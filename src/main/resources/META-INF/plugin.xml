<idea-plugin>
    <id>com.github.patou.gitmoji-intellij-plugin</id>
    <name>Gitmoji</name>
    <vendor email="patrice@desaintsteban.fr" url="https://intellij.patou.dev">Patrice de Saint Steban</vendor>

    <description><![CDATA[
    Allow to add gitmotji emoticon in commit dialog.
    ]]></description>

    <change-notes>
        <![CDATA[
        <p>
            <h4>1.0.0</h4>
            <ul>
                <li>First version, display a button near the history commit list in the commit dialog</li>
            </ul>
        </p>
        ]]>
    </change-notes>

    <depends>com.intellij.modules.lang</depends>

    <actions>
        <action id="Gitmoji.GitCommitAction" class="com.github.patou.gitmoji.GitCommitAction" text="GitmojiButton" icon="/icons/gitmoji.png"
                description="Add gitmoji button">
            <add-to-group group-id="Vcs.MessageActionGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>